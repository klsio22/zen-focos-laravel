APP_NAME=ZenFocos
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Localizações
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database
# PHP_CLI_SERVER_WORKERS=4

# Hash de senhas
BCRYPT_ROUNDS=12

# Logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ========== BANCO DE DADOS ==========
# Padrão: SQLite (recomendado para desenvolvimento local)
DB_CONNECTION=sqlite
# DB_DATABASE=/caminho/absoluto/para/database.sqlite

# Descomente para usar MySQL
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=zenfocos
# DB_USERNAME=root
# DB_PASSWORD=

# Descomente para usar PostgreSQL
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=zenfocos
# DB_USERNAME=postgres
# DB_PASSWORD=

# ========== SESSÃO ==========
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ========== FILA E CACHE ==========
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

# ========== MEMCACHED (opcional) ==========
MEMCACHED_HOST=127.0.0.1

# ========== REDIS (opcional) ==========
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========== EMAIL ==========
# Para desenvolvimento, use 'log' (verifica em storage/logs)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="zenfocos@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========== AWS (opcional, para upload de arquivos) ==========
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========== VITE ==========
VITE_APP_NAME="${APP_NAME}"

